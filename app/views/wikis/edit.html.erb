<h1>Edit Wiki</h1>

<div class="row">
    <div class="col-md-8">
        <%= form_for @wiki do |w| %>
        <div class="form-group">
            <%= w.label :title %>
            <%= w.text_field :title, class: 'form-control', placeholder: @wiki.title %>
        </div>
        
        <div class="form-group">
            <%= w.label :body %>
            <%= w.text_area :body, rows: 10, class: 'form-control', placeholder: "Enter Wiki body" %>
        </div>
        
        <div class="form-group">
            <%= w.label :private, class: 'checkbox' do %>
                <%= w.check_box :private %> Private Topic
            <% end %>
        </div>   
        
        <%= w.submit "Save" %>
      
        <% end %>
    </div>
</div>


