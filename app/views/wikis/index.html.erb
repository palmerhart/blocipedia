<h1>All Wiki's</h1>

<button><%= link_to "New Wiki", new_wiki_path %></button>

<% if current_user.admin? || current_user.premium? %>
    <% @wiki.each do |wiki| %>
        <div class="media">
            <div class="media-body">
                <h4 class="media-heading">
                    <p><%= link_to markdown(wiki.title), wiki %> 
                        <% if wiki.private? %>
                            Private
                        <% else %>
                            Public
                        <% end %>:
                        <%= User.find(wiki.user_id).email    %>
                    </p>    
                </h4>
            </div>
        </div>
    <% end %>
<% end %>

<% if current_user.standard? %>
    <% @wiki.each do |wiki| %>
        <div class="media">
            <div class="media-body">
                <h4 class="media-heading">
                    <% if !wiki.private? %>
                        <p><%= link_to markdown(wiki.title), wiki %></p>
                    <% end %>
                </h4>
            </div>
        </div>
    <% end %>
<% end %>
