<h1>Create a new Wiki here...</h1>

<%= form_for @wiki do |w| %>
    <div class="form-group">
        <%= w.label :title %>
        <%= w.text_field :title, class: 'form-control', placeholder: "Enter Wiki title" %>
    </div>
    
    <div class="form-group">
        <%= w.label :body %>
        <%= w.text_area :body, rows: 10, class: 'form-control', placeholder: "Enter Wiki body" %>
    </div>
    
    <div class="form-group">
        <%= w.label :private, class: 'checkbox' do %>
            <%= w.check_box :private %> Private Topic
        <% end %>
    </div>    
    
    <%= w.submit "Save" %>
  
<% end %>